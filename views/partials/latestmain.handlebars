                </div>
            </li>
        </ul>

    </nav>

    <div id="wrapper">

        <!-- Sidebar -->
        <ul class="sidebar navbar-nav" style="background-color:rgb(88, 86, 82)">
            <li class="nav-item ">
                <a class="nav-link" href="/">
                    <i class="fas fa-fw fa-tachometer-alt"></i>
                    <span>Dashboard</span>
                </a>
            </li>
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="pagesDropdown" role="button" data-toggle="dropdown"
                    aria-haspopup="true" aria-expanded="false">
                    <i class="fas fa-fw fa-folder"></i>
                    <span>Actions</span>
                </a>
                <div class="dropdown-menu" aria-labelledby="pagesDropdown">
                    <h6 class="dropdown-header">Login Screens:</h6>
                    {{#if user}}
                    <a class="dropdown-item" href="/users/changepassword">Change Password</a>
                    {{else}}
                    <a class="dropdown-item" href="/users/login">Login</a>
                    <a class="dropdown-item" href="/users/register">Register</a>
                    {{/if}}
                    <div class="dropdown-divider"></div>
                    {{!-- <h6 class="dropdown-header">Other Pages:</h6>
                    <a class="dropdown-item" href="404.html">404 Page</a>
                    <a class="dropdown-item" href="blank.html">Blank Page</a> --}}
                </div>
            </li>
            {{#if (compare user.role "==" "admin")}}
            <li class="nav-item">
                <a class="nav-link" href="/admin/adminpanel">
                    <i class="fas fa-fw fa-chart-area"></i>
                    <span>AdminPanel</span></a>
            </li>
            {{/if}}
             {{#if (compare user.role "==" "owner")}}
            <li class="nav-item">
                <a class="nav-link" href="/pgs">
                    <i class="fas fa-fw fa-chart-area"></i>
                    <span>Your PG list</span></a>
            </li>
            {{/if}}
        </ul>

        <div class="container-fluid mt-5 mb-5">
            <div class="card-body">
                {{> _msg}}
                {{> _errors}}
                {{{body}}}
            </div>
        </div>

        <!-- Sticky Footer -->
        <footer class="sticky-footer mt-5">
            <div class="container my-auto">
                <div class="copyright text-center my-auto">
                    <span>Copyright © PGfinder 2018</span>
                </div>
            </div>
        </footer>

    </div>
