        <!-- Navbar -->
        <ul class="navbar-nav ml-auto ml-md-0">
             <li class="nav-item ">
                <a class="nav-link " href="/pgs/cart"  role="button" 
                    aria-haspopup="true" aria-expanded="false">
             <i class="fas fa-shopping-cart"  href="/pgs/cart" aria-hidden="true"></i>
                  
                </a>
               
            </li>
            <li class="nav-item dropdown no-arrow mx-1">
