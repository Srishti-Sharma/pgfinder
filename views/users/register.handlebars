<div class="row mb-5">
    <div class="col-sm-6 mx-auto mt-5">
        <div class="card mb-5">
            <div class="card-header">
            <h3 class="text-center">Register</h3>
            </div>
        <div class="card-body">
            <form action="/users/register" method="post">
                <div class="form-group">
                    <label>Name</label>
                    <input type="text" class="form-control" name="name" value="{{name}}" placeholder="Enter name"
                        required>
                </div>
                <div class="form-group">
                    <label>Email address</label>
                    <input type="email" class="form-control" name="email" value="{{email}}" placeholder="Enter email"
                        required>
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <input type="password" class="form-control" name="password" placeholder="Password" required>
                </div>
                <div class="form-group">
                    <label>Confirm Password</label>
                    <input type="password" class="form-control" name="confirmpassword" placeholder="Password" required>
                </div>
                <div class="form-group ">
                    <label for="inputState"> Type of Service : </label>
                    <div class="col-md-6">
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="role" required id="exampleRadios1" value="user"
                                checked required>
                            <label class="form-check-label">
                                Service Taker
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="role" id="exampleRadios1" value="owner">
                            <label class="form-check-label">
                                Service Provider
                            </label>
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
            </div>
        </div>
    </div>
</div>