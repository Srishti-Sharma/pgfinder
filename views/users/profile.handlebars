<div class="row mb-5 mt-3">
    <div class="card mx-auto w-75">
        <div class="card-header">
            <h3 class="text-center"> Add Your Profile</h3>
        </div>
        <div class="col-md-10 mx-auto mt-5">
          
                    <form action="/users/profile?_method=PUT" method="POST">
                        <div class="form-group">
                            <label>Name</label>
                            <input type="text" class="form-control" name="name" value="{{user.name}}" placeholder="Enter name"
                                required>
                        </div>
                        <div class="form-group">
                            <label>Email address</label>
                            <input type="email" class="form-control" name="email" value="{{user.email}}" placeholder="Enter email"
                                required>
                        </div>

                        <div class="form-group ">
                            <label for="inputState"> Gender : </label>
                            <div class="col-md-6">
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="gender" id="exampleRadios1"
                                        value="male" required>
                                    <label class="form-check-label">
                                        Male
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="gender" id="exampleRadios1"
                                        value="female">
                                    <label class="form-check-label">
                                        Female
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="gender" id="exampleRadios1"
                                        value="other">
                                    <label class="form-check-label">
                                        Other
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Address</label>
                            <input type="text" class="form-control" id="inputAddress" value="{{user.address}}" name="address"
                                placeholder="1234 Main St">
                        </div>

                        <div class="form-group ">
                            <label>Phone number</label>
                            <input type="text" class="form-control" value="{{user.phonenumber}}" id="inputAddress" name="phonenumber"
                                placeholder="Phone Number">
                        </div>

                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>