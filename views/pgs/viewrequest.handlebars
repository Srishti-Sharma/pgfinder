<div class="card col-sm w-75 mx-auto mb-5">
    <h4 class="card-header">View Request</h4>
    <div class="card-body">
       
            <div class="table-responsive-xl " style="overflow-y: hidden">
                <table class="table text-center">
                    <tr>
                        <div class="col mr-1 " text-align="center">
                            <th>Profile Image</th>

                            <th>Name</th>
                            <th> Email </th>
                            <th> Contact Number</th>
                            <th colspan="2" class="text-center"> Action </th>
                    </tr>
                     {{#each users}}
       
            {{#if (searchName _id name ../pgs.userrequests)}}
                    <tr>
                        <div class="col mr-1">
                        <td><img src="{{profileimage}}" class="img-fluid rounded-circle" height="20%" width="22%"> </td>                            
                            <td>{{name}}</td>
                            <td> {{email}} </td>
                            <td> {{phonenumber}} </td>
                            <td>  <form method="post" action="/pgs/viewrequestaccept/{{id}}/{{../pgs.id}}?_method=PUT">
                        <input type="hidden" name="_method" value="PUT">
                        <input type="submit" class="btn btn-block" style="background-color:forestgreen" value="Accept">
                    </form> </td>
                    <td> <form method="post" action="/pgs/viewrequestreject/{{id}}/{{../pgs.id}}?_method=PUT">
                        <input type="hidden" name="_method" value="PUT">
                        <input type="submit" class="btn btn-danger btn-block" value="Reject">
                    </form></td>
                    </tr>
                     {{/if}}
       
        {{/each}}
                </table>
            </div>
           
    </div>
</div>