<div class="container mb-5 mt-5 mx-auto ">
<div class="card col-sm mt-3 mb-5">
    <h4 class="card-header mt-2">Your Customers</h4>
    <div class="card-body">
              
        <div class="table-responsive-xl " style="overflow-y: hidden">
            <table class="table table-hover">
           <thead style="background-color: darkgrey">
                <tr>
                    
                    <div class="col mr-1 " text-align="center">
                        <th>Profile Image</th>
                        <th> Customer Name</th>
                        <th> Customer Number </th>
                        <th>Gender</th>
                        <th> Email </th>
                        <th> Address </th>
                        <th> PG Location</th>
                        <th> PG City</th>
                        <th> PG State</th>
                        <th> PG Country</th>
                        <th> PG Price </th>
                </tr>
                </thead>
                 {{#each users}}
        {{#each ../pgs}}
        {{#if (searchPG id ../bookedpg)}}
                <tr>
                    <div class="col mr-1">
                        <td><img src="{{../profileimage}}" class="img-fluid rounded-circle"> </td>
                        <td>{{../name}}</td>
                        <td> {{../phonenumber}} </td>
                        <td> {{../gender}} </td>
                        <td> {{../email}} </td>
                        <td> {{../address}} </td>
                        <td>{{location}}</td>
                        <td>{{city}}</td>
                        <td>{{state}}</td>
                        <td>{{country}}</td>
                        <td>{{price}}</td>

                </tr>
                 {{/if}}

        {{/each}}
       
    {{/each}}
            </table>
        </div>
       
</div>
</div>