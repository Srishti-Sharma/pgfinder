<body id="page-top">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark sticky-top">

        <a class="navbar-brand mr-1" href="/">PGfinder</a>

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo02"
            aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link mr-3" href="/">
                        <span>Home</span></a>
                </li>

                <li class="nav-item">
                    <a class="nav-link mr-3" href="/about">
                        <span>About</span></a>
                </li>


                {{#if (compare user.role "==" "admin")}}
                <li class="nav-item">
                    <a class="nav-link mr-3" href="/admin/adminpanel">
                        <span>AdminPanel</span></a>
                </li>
                {{/if}}
                {{#if (compare user.role "==" "owner")}}
                <li class="nav-item mr-3">
                    <a class="nav-link" href="/pgs">
                        <span>Your PG list</span></a>
                </li>
                {{/if}}

                <li class="nav-item dropdown mx-1" style="color: white">
                    {{#if user}}
                    <blockquote>Hi {{user.name}}</blockquote>
                    {{/if}}
                </li>
                 {{#if (compare user.role "==" "owner" )}}
                <li class="nav-item ">
                    <a class="nav-link " href="/pgs/cart" aria-haspopup="true" aria-expanded="false">
                        <i class="fas fa-shopping-cart" href="/pgs/cart" aria-hidden="true"></i>
                    </a>
                </li>
                {{/if}}
                 {{#if (compare user.role "==" "user" )}}
                <li class="nav-item ">
                    <a class="nav-link " href="/pgs/cart" aria-haspopup="true" aria-expanded="false">
                        <i class="fas fa-shopping-cart" href="/pgs/cart" aria-hidden="true"></i>
                    </a>
                </li>
                {{/if}}
                
                <li class="nav-item">
                    <a class="nav-link " href="#" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true"
                        aria-expanded="false">
                        <i class="fas fa-user-circle fa-fw"></i>
                    </a>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                        {{#if user}}
                        <a class="dropdown-item" href="/userprofile">Your Profile</a>
                        <a class="dropdown-item" href="/users/editprofile">Edit Profile</a>
                        <a class="dropdown-item" href="/users/changepassword">Change Password</a>

                        <div class="dropdown-divider"></div>

                        <a class="dropdown-item" href="/users/logout" data-toggle="modal" data-target="#logoutModal">Logout</a>
                        {{else}}
                        <a class="dropdown-item" href="/users/register">Sign-Up</a>
                        <a class="dropdown-item" href="/users/login">Login</a>
                        {{/if}}
                    </div>
                </li>

            </ul>

        </div>
    </nav>

    <div id="wrapper">
        <div class="container-fluid mb-5">
            {{!-- <div class="card">
                <div class="card-body"> --}}
                    {{> _msg}}
                    {{> _errors}}
                    {{{body}}}
                    {{!-- </div>
            </div> --}}
        </div>
    </div>
    <!-- Sticky Footer -->
    <footer class="sticky-footer mt-5" style="width:100%">
        <div class="container my-auto">
            <div class="copyright text-center my-auto">
                <span>Copyright © PGfinder 2018</span>
            </div>
        </div>
    </footer>


    <!-- /.content-wrapper -->

    </div>
    <!-- /#wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Logout Modal-->
    <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">Select "Logout" below if you are ready to end your current session.</div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                    <a class="btn btn-primary" href="/users/logout">Logout</a>
                </div>
            </div>
        </div>
    </div>

